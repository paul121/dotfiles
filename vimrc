syntax enable
set autoread

" Themes "
set background=dark
colorscheme torte

" UI "
set ruler
set number
set numberwidth=5
set cmdheight=2
set scrolloff=5
ino jj <esc>
cno jj <c-c>
vno v <esc>


" Text Formatting / Layout "
set autoindent
set tabstop=4
set shiftwidth=4
set softtabstop=4
set shiftround
set expandtab
set smarttab
set smartindent

" Key remapping "
inoremap <M-Space> <Esc>
